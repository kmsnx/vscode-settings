{
    // Window
    "window.restoreFullscreen": true,
    // Workbench
    "workbench.commandPalette.history": 0,
    "workbench.statusBar.feedback.visible": false,
    "workbench.editor.swipeToNavigate": true,
    "workbench.editor.tabSizing": "shrink",
    "workbench.startupEditor": "none",
    "workbench.iconTheme": "vscode-icons",
    // Editor
    "editor.acceptSuggestionOnEnter": "on",
    "editor.accessibilitySupport": "auto",
    "editor.autoClosingBrackets": "languageDefined",
    "editor.autoClosingQuotes": "languageDefined",
    "editor.autoIndent": true,
    "editor.autoSurround": "languageDefined",
    "editor.codeLens": true,
    "editor.colorDecorators": true,
    "editor.copyWithSyntaxHighlighting": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.cursorStyle": "line-thin",
    "editor.detectIndentation": true,
    "editor.fontFamily": "Menlo, Monaco, Consolas, 'Droid Sans Mono', Inconsolata, 'Courier New', monospace",
    "editor.fontLigatures": false,
    "editor.fontSize": 12,
    "editor.fontWeight": "100",
    "editor.formatOnPaste": true,
    "editor.formatOnSave": true,
    "editor.formatOnSaveTimeout": 1000,
    "editor.gotoLocation.multiple": "goto",
    "editor.hover.delay": 200,
    "editor.hover.enabled": true,
    "editor.insertSpaces": true,
    "editor.mouseWheelZoom": true,
    "editor.smoothScrolling": true,
    "editor.suggest.maxVisibleSuggestions": 10,
    "editor.tabSize": 2,
    "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120,
    "editor.wrappingIndent": "indent",
    // Files
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/CVS": true,
        "**/node_modules": true,
        "**/__pycache__": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.vscode": true,
        "**/.pytest_cache": true,
        "**/.coverage": true,
        "**/.pyc": true,
        "**/.tox": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/build": true
    },
    // Search
    "search.exclude": {
        "**/CVS": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/__pycache__": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.vscode": true,
        "**/.pytest_cache": true,
        "**/.coverage": true,
        "**/.pyc": true,
        "**/.tox": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/build": true
    },
    "search.useGlobalIgnoreFiles": true,
    // Terminal
    "terminal.integrated.cursorBlinking": true,
    // Telemetry
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    // Update
    "update.enableWindowsBackgroundUpdates": false,
    "update.mode": "manual",
    // Breadcrumbs
    "breadcrumbs.enabled": true,
    // Other
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    // Merge Conflicts
    "merge-conflict.autoNavigateNextConflict.enabled": true,
    // Git
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    "git.autofetchPeriod": 1800,
    "git.autoStash": true,
    "git.fetchOnPull": true,
    "gitlens.blame.ignoreWhitespace": true,
    // HTML
    "html.format.endWithNewline": true,
    "html.format.indentHandlebars": true,
    "html.format.indentInnerHtml": true,
    "html.format.wrapAttributes": "aligned-multiple",
    "html.format.wrapLineLength": 100,
    // CSS
    "css.lint.boxModel": "warning",
    "css.lint.float": "warning",
    "css.lint.duplicateProperties": "warning",
    "css.lint.important": "warning",
    "css.lint.universalSelector": "warning",
    "css.lint.zeroUnits": "warning",
    // JavaScript
    "javascript.implicitProjectConfig.checkJs": true,
    "javascript.suggest.completeFunctionCalls": true,
    // TypeScript
    "typescript.suggest.completeFunctionCalls": true,
    // Python
    "[python]": {
        "editor.tabSize": 4
    },
    "python.pythonPath": "VIRTUALENV_PATH/bin/python3",
    "python.autoComplete.extraPaths": [
        "VIRTUALENV_PATH/lib/python3.7.1/site-packages"
    ],
    "python.jediEnabled": false,
    "python.linting.ignorePatterns": [
        ".vscode/*.py",
        "**/site-packages/**/*.py"
    ],
    "python.linting.enabled": true,
    "python.linting.lintOnSave": true,
    "python.linting.pylintEnabled": false,
    "python.linting.flake8Enabled": true,
    "python.formatting.provider": "autopep8",
    "python.testing.unittestEnabled": true,
    "python.testing.pyTestEnabled": true,
    "python.testing.nosetestsEnabled": false,
    "python.linting.flake8Args": [
        "--max-line-length=120",
    ],
    "python.linting.pep8Args": [
        "--max-line-length=120",
    ],
    "editor.suggestSelection": "first",
    "window.zoomLevel": 0,
}
