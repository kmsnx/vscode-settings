{
    // Window
    "window.zoomLevel": -1,
    // Workbench
    "workbench.commandPalette.history": 0,
    "workbench.statusBar.feedback.visible": false,
    "workbench.editor.swipeToNavigate": true,
    "workbench.editor.tabSizing": "shrink",
    "workbench.startupEditor": "none",
    "workbench.iconTheme": "vscode-icons",
    // Editor
    "editor.minimap.enabled": false,
    "editor.autoClosingBrackets": "languageDefined",
    "editor.autoClosingQuotes": "languageDefined",
    "editor.autoIndent": "full",
    "editor.autoSurround": "languageDefined",
    "editor.codeLens": true,
    "editor.colorDecorators": true,
    "editor.copyWithSyntaxHighlighting": true,
    "editor.cursorBlinking": "smooth",
    "editor.cursorSmoothCaretAnimation": true,
    "editor.cursorStyle": "line-thin",
    "editor.detectIndentation": true,
    "editor.fontFamily": "Menlo, Monaco, Consolas, 'Droid Sans Mono', Inconsolata, 'Courier New', monospace",
    "editor.fontLigatures": false,
    "editor.fontSize": 12,
    "editor.formatOnPaste": true,
    "editor.formatOnSave": false,
    "editor.gotoLocation.multipleImplementations": "peek",
    "editor.gotoLocation.multipleDeclarations": "peek",
    "editor.hover.delay": 200,
    "editor.hover.enabled": true,
    "editor.insertSpaces": true,
    "editor.mouseWheelZoom": true,
    "editor.smoothScrolling": true,
    "editor.suggestSelection": "first",
    "editor.suggest.maxVisibleSuggestions": 10,
    "editor.codeActionsOnSave": {
        "source.fixAll": true,
        "source.fixAll.eslint": true
    },
    // Files
    "files.eol": "\n",
    "files.insertFinalNewline": true,
    "files.trimFinalNewlines": true,
    "files.trimTrailingWhitespace": true,
    "files.autoSave": "onFocusChange",
    "files.exclude": {
        "**/CVS": true,
        "**/node_modules": true,
        "**/__pycache__": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.vscode": true,
        "**/.pytest_cache": true,
        "**/.coverage": true,
        "**/.pyc": true,
        "**/.tox": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/build": true
    },
    // Search
    "search.exclude": {
        "**/CVS": true,
        "**/node_modules": true,
        "**/bower_components": true,
        "**/__pycache__": true,
        "**/.DS_Store": true,
        "**/.git": true,
        "**/.vscode": true,
        "**/.pytest_cache": true,
        "**/.coverage": true,
        "**/.pyc": true,
        "**/.tox": true,
        "**/.svn": true,
        "**/.hg": true,
        "**/build": true
    },
    "search.useGlobalIgnoreFiles": true,
    // Terminal
    "terminal.integrated.rendererType": "dom",
    "terminal.integrated.cursorBlinking": true,
    "terminal.integrated.shell.osx": "/bin/zsh",
    // Telemetry
    "telemetry.enableCrashReporter": false,
    "telemetry.enableTelemetry": false,
    // Update
    "update.enableWindowsBackgroundUpdates": false,
    "update.mode": "manual",
    // Breadcrumbs
    "breadcrumbs.enabled": true,
    // IntelliCode
    "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
    // Merge Conflicts
    "merge-conflict.autoNavigateNextConflict.enabled": true,
    // Git
    "git.autofetch": true,
    "git.fetchOnPull": true,
    "git.confirmSync": false,
    "git.enableSmartCommit": true,
    "gitlens.blame.ignoreWhitespace": true,
    // Live Share
    "liveshare.populateGitCoAuthors": "never",
    "liveshare.allowGuestDebugControl": true,
    "liveshare.allowGuestTaskControl": true,
    // ESLint
    "eslint.enable": true,
    "eslint.run": "onSave",
    "eslint.alwaysShowStatus": true,
    "eslint.format.enable": true,
    "eslint.lintTask.enable": true,
    "eslint.validate": [
        "javascript",
        "vue",
        "html"
    ],
    // JSON
    "[json]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    // HTML
    "html.format.endWithNewline": true,
    "html.format.indentHandlebars": true,
    "html.format.indentInnerHtml": true,
    "[html]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    },
    // CSS
    "css.lint.boxModel": "warning",
    "css.lint.float": "warning",
    "css.lint.duplicateProperties": "warning",
    "css.lint.important": "warning",
    "css.lint.universalSelector": "warning",
    "css.lint.zeroUnits": "warning",
    // SASS & SCSS
    "[scss]": {
        "sass.lint.enable": true,
    },
    // JavaScript
    "[javascript]": {
        "editor.tabSize": 4,
        "editor.defaultFormatter": "dbaeumer.vscode-eslint",
    },
    "javascript.preferences.quoteStyle": "single",
    "javascript.preferences.useAliasesForRenames": true,
    "javascript.preferences.importModuleSpecifier": "non-relative",
    "javascript.implicitProjectConfig.checkJs": true,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "javascript.autoClosingTags": true,
    "javascript.suggest.completeFunctionCalls": true,
    "[javascriptreact]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    // TypeScript
    "typescript.format.enable": false,
    "typescript.validate.enable": false,
    "typescript.suggest.enabled": false,
    "typescript.preferences.quoteStyle": "single",
    "typescript.preferences.useAliasesForRenames": true,
    "typescript.updateImportsOnFileMove.enabled": "always",
    "vsintellicode.typescript.completionsEnabled": false,
    "javascript.validate.enable": false,
    // TypeScript React .tsx
    "[typescriptreact]": {
        "editor.defaultFormatter": "dbaeumer.vscode-eslint"
    },
    // Vue
    "vetur.format.defaultFormatterOptions": {
        "[vue, js]": {
            "singleQuote": true,
            "eslintIntegration": true,
        },
    },
    // Python
    "[python]": {
        "editor.tabSize": 4,
        "editor.autoClosingQuotes": "languageDefined",
    },
    "python.pythonPath": "/usr/bin/python3",
    "python.autoComplete.extraPaths": [
        "/usr/local/bin/python3"
    ],
    "python.sortImports.args": [
        "-rc",
        "--atomic"
    ],
    "python.autoComplete.addBrackets": true,
    "python.jediEnabled": false,
    "python.formatting.provider": "autopep8",
    "python.testing.pytestEnabled": true,
    "python.linting.enabled": true,
    "python.linting.lintOnSave": false,
    "python.linting.pylintEnabled": false,
    "python.linting.pycodestyleEnabled": true,
    "python.linting.pycodestyleArgs": [
        "--max-line-length=120",
        "--max-doc-length=120",
        "--max-line-length",
        "120",
        "--in-place",
        "--aggressive"
    ],
    "python.formatting.autopep8Args": [
        "--max-line-length",
        "120",
        "--in-place",
        "--aggressive"
    ],
    "python.formatting.blackArgs": [
        "--line-length",
        "120",
        "--single-quotes"
    ],
    "python.linting.ignorePatterns": [
        ".vscode/*.py",
        "**/site-packages/**/*.py"
    ],
