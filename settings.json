{
  // Workbench
  "workbench.commandPalette.history": 0,
  "workbench.editor.tabSizing": "shrink",
  "workbench.startupEditor": "none",
  "workbench.iconTheme": "vscode-icons",
  // Editor
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.minimap.enabled": false,
  "editor.autoClosingBrackets": "languageDefined",
  "editor.autoClosingQuotes": "languageDefined",
  "editor.autoIndent": "full",
  "editor.autoSurround": "languageDefined",
  "editor.codeLens": true,
  "editor.colorDecorators": true,
  "editor.copyWithSyntaxHighlighting": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": true,
  "editor.cursorStyle": "line-thin",
  "editor.detectIndentation": true,
  "editor.fontFamily": "Menlo, Monaco, Consolas, 'Droid Sans Mono', Inconsolata, 'Courier New', monospace",
  "editor.fontLigatures": false,
  "editor.fontSize": 14,
  "editor.formatOnPaste": true,
  "editor.gotoLocation.multipleImplementations": "peek",
  "editor.gotoLocation.multipleDeclarations": "peek",
  "editor.smoothScrolling": true,
  "editor.suggestSelection": "first",
  "editor.codeActionsOnSave": {
    "source.fixAll": true,
    "source.fixAll.eslint": true
  },
  // Files
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "onFocusChange",
  "files.exclude": {
    "**/CVS": true,
    "**/node_modules": true,
    "**/__pycache__": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.vscode": true,
    "**/.pytest_cache": true,
    "**/.coverage": true,
    "**/.pyc": true,
    "**/.tox": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/build": true
  },
  // Search
  "search.exclude": {
    "**/CVS": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/__pycache__": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.vscode": true,
    "**/.pytest_cache": true,
    "**/.coverage": true,
    "**/.pyc": true,
    "**/.tox": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/build": true
  },
  "search.useGlobalIgnoreFiles": true,
  // Telemetry
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "redhat.telemetry.enabled": false,
  // Languages
  "cSpell.language": "en,pl,sv",
  // Git
  "git.autofetch": true,
  "git.fetchOnPull": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "gitlens.blame.ignoreWhitespace": true,
  // Live Share
  "liveshare.populateGitCoAuthors": "never",
  "liveshare.allowGuestDebugControl": true,
  "liveshare.allowGuestTaskControl": true,
  // ESLint
  "eslint.enable": true,
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.alwaysShowStatus": true,
  "eslint.validate": [
    "typescriptreact",
    "javascriptreact",
    "javascript",
    "typescript",
    "html",
    "vue"
  ],
  // SVG
  "svg.preview.mode": "svg",
  // JSON
  "json.format.enable": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Markdown
  "[markdown]": {
    "editor.formatOnSave": false
  },
  // DotEnd
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  // Shell
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  // XML
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  // HTML
  "html.format.endWithNewline": true,
  "html.format.indentHandlebars": true,
  "html.format.indentInnerHtml": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // CSS
  "css.lint.float": "warning",
  "css.lint.zeroUnits": "error",
  "css.lint.boxModel": "warning",
  "css.lint.important": "warning",
  "css.lint.duplicateProperties": "error",
  "css.lint.universalSelector": "warning",
  // SASS & SCSS
  "[scss]": {
    "sass.lint.enable": true
  },
  // JavaScript / Typescript
  "[javascript,javascriptreact,typescript,typescriptreact]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": false,
      "source.fixAll.tslint": false,
      "source.fixAll.stylelint": false
    }
  },
  "js/ts.implicitProjectConfig.checkJs": true,
  // JavaScript
  "javascript.preferences.importModuleSpecifier": "non-relative",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.useAliasesForRenames": true,
  "javascript.suggest.completeFunctionCalls": true,
  "javascript.validate.enable": false,
  "javascript.suggest.enabled": true,
  "javascript.autoClosingTags": true,
  "javascript.format.enable": true,
  // TypeScript
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.useAliasesForRenames": true,
  "vsintellicode.typescript.completionsEnabled": true,
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.tsdk": "./node_modules/typescript/lib",
  "typescript.validate.enable": true,
  "typescript.suggest.enabled": true,
  "typescript.autoClosingTags": true,
  "typescript.format.enable": true,
  // Vue
  "vetur.format.defaultFormatterOptions": {
    "[vue, js]": {
      "eslintIntegration": true
    }
  },
  // Python
  "[python]": {
    "editor.autoClosingQuotes": "languageDefined"
  },
  "python.pythonPath": "/Users/marcin.kaminski/Library/Python/3.9/bin",
  "python.autoComplete.extraPaths": [
    "/Users/marcin.kaminski/Library/Python/3.9/bin"
  ],
  "python.sortImports.args": ["-rc", "--atomic"],
  "python.formatting.provider": "autopep8",
  "python.testing.pytestEnabled": true,
  "python.linting.banditEnabled": true,
  "python.linting.enabled": true,
  "python.linting.lintOnSave": true,
  "python.linting.pylintEnabled": true,
  "python.linting.pycodestyleEnabled": true,
  "python.linting.pylintPath": "/Users/marcin.kaminski/Library/Python/3.9/bin/pylint",
  "python.linting.pylintArgs": [
    "--load-plugins",
    "pylint_django",
    "--in-place",
    "--aggressive"
  ],
  "python.linting.pycodestyleArgs": ["--max-line-length=120"],
  "python.linting.ignorePatterns": [
    ".vscode/*.py",
    "**/site-packages/**/*.py",
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_Store",
    "**/*.pyc",
    "**/__pycache__/"
  ],
  "python.languageServer": "Default"
}
