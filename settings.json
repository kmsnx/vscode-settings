{
  // Workbench
  "workbench.commandPalette.history": 0,
  "workbench.editor.tabSizing": "shrink",
  "workbench.startupEditor": "none",
  "workbench.iconTheme": "vscode-icons",
  "workbench.editorAssociations": {
    "*.plist": "default"
  },
  // Eztensions
  "extensions.ignoreRecommendations": true,
  // Editor
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.minimap.enabled": false,
  "editor.autoClosingBrackets": "languageDefined",
  "editor.autoClosingQuotes": "languageDefined",
  "editor.autoIndent": "full",
  "editor.autoSurround": "languageDefined",
  "editor.codeLens": true,
  "editor.colorDecorators": true,
  "editor.copyWithSyntaxHighlighting": true,
  "editor.cursorBlinking": "smooth",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.cursorStyle": "line-thin",
  "editor.detectIndentation": true,
  "editor.fontFamily": "Menlo, Monaco, Consolas, 'Droid Sans Mono', Inconsolata, 'Courier New', monospace",
  "editor.fontLigatures": false,
  "editor.fontSize": 14,
  "editor.formatOnPaste": true,
  "editor.gotoLocation.multipleImplementations": "peek",
  "editor.gotoLocation.multipleDeclarations": "peek",
  "editor.smoothScrolling": true,
  "editor.suggestSelection": "first",
  "editor.inlineSuggest.enabled": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": false,
    "source.fixAll.eslint": false
  },
  // Window
  "window.zoomLevel": -1,
  // Terminal
  "terminal.integrated.env.osx": {},
  // Files
  "files.eol": "\n",
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "files.autoSave": "onFocusChange",
  "files.exclude": {
    "**/__pycache__": true,
    "**/.coverage": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.hg": true,
    "**/.pyc": true,
    "**/.pytest_cache": true,
    "**/.svn": true,
    "**/.tox": true,
    "**/CVS": true,
    "**/node_modules": true
  },
  // Search
  "search.exclude": {
    "**/CVS": true,
    "**/node_modules": true,
    "**/bower_components": true,
    "**/__pycache__": true,
    "**/.DS_Store": true,
    "**/.git": true,
    "**/.vscode": true,
    "**/.pytest_cache": true,
    "**/.coverage": true,
    "**/.pyc": true,
    "**/.tox": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/build": true
  },
  "search.useGlobalIgnoreFiles": true,
  // Telemetry
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "telemetry.telemetryLevel": "off",
  // Languages
  "cSpell.language": "en,pl,sv",
  // Git
  "git.autofetch": true,
  "git.fetchOnPull": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "gitlens.blame.ignoreWhitespace": true,
  // ESLint
  "eslint.enable": true,
  "eslint.format.enable": true,
  "eslint.lintTask.enable": true,
  "eslint.validate": [
    "typescriptreact",
    "javascriptreact",
    "javascript",
    "typescript",
    "html",
    "vue"
  ],
  // JSON
  "json.format.enable": true,
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // Markdown
  "[markdown]": {
    "editor.formatOnSave": false
  },
  // DotEnd
  "[dotenv]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  // Shell
  "[shellscript]": {
    "editor.defaultFormatter": "foxundermoon.shell-format"
  },
  // XML
  "[xml]": {
    "editor.defaultFormatter": "redhat.vscode-xml"
  },
  // YAML
  "yaml.schemas": {
    "file:///Users/marcinkaminski/.vscode/extensions/atlassian.atlascode-3.0.3/resources/schemas/pipelines-schema.json": "bitbucket-pipelines.yml"
  },
  // HTML
  "html.format.endWithNewline": true,
  "html.format.indentHandlebars": true,
  "html.format.indentInnerHtml": true,
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  // CSS
  "css.lint.float": "warning",
  "css.lint.zeroUnits": "error",
  "css.lint.boxModel": "warning",
  "css.lint.important": "warning",
  "css.lint.duplicateProperties": "error",
  "css.lint.universalSelector": "warning",
  // JavaScript / Typescript
  "[javascript,javascriptreact,typescript,typescriptreact]": {
    "editor.formatOnSave": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": {
      "source.fixAll.eslint": false,
      "source.fixAll.tslint": false,
      "source.fixAll.stylelint": false
    }
  },
  "js/ts.implicitProjectConfig.checkJs": true,
  // JavaScript
  "javascript.preferences.importModuleSpecifier": "relative",
  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.preferences.useAliasesForRenames": true,
  "javascript.suggest.completeFunctionCalls": true,
  "javascript.validate.enable": false,
  "javascript.suggest.enabled": true,
  "javascript.autoClosingTags": true,
  "javascript.format.enable": true,
  // TypeScript
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.useAliasesForRenames": true,
  "typescript.suggest.completeFunctionCalls": true,
  "typescript.tsdk": "./node_modules/typescript/lib",
  "typescript.validate.enable": true,
  "typescript.suggest.enabled": true,
  "typescript.autoClosingTags": true,
  "typescript.format.enable": true,
  // Python
  "[python]": {
    "editor.autoClosingQuotes": "languageDefined"
  },
  // Sql
  "[sql]": {
    "editor.defaultFormatter": "mtxr.sqltools"
  }
}
